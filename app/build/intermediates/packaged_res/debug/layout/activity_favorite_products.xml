<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.FavoriteProducts" android:tag="layout/activity_favorite_products_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Favorite_Product"
                android:layout_gravity="center"
                android:textSize="30dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eq_recycler_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                tools:listitem="@layout/favorite_product_item"/>


        </LinearLayout>

    </RelativeLayout>
         