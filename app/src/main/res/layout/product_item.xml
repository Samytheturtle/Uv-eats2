<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iconProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_newproduct"
        />
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconProduct"
            android:paddingStart="16dp"
            android:textSize="20dp"
            android:text="Nombre producto"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/productName"
            android:paddingStart="16dp"
            android:textSize="20dp"
            android:text="$200"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconProduct"
            android:layout_marginTop="30dp"
            android:paddingStart="16dp"
            android:textSize="15dp"
            android:text="DescripciÃ³n producto"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImageDislike"
            android:layout_marginTop="10dp"
            android:text="@string/Add_Cart"
            />

        <ImageView
            android:id="@+id/ImageLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconProduct"
            android:layout_below="@id/productDescription"
            android:paddingStart="10dp"
            android:src="@drawable/icon_like"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ImageLike"
            android:layout_below="@id/productDescription"
            android:paddingStart="5dp"
            android:text="25"
            android:textSize="20dp"
            />
        <ImageView
            android:id="@+id/ImageDislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_dislike"
            android:layout_below="@id/ImageLike"
            android:layout_toEndOf="@id/iconProduct"
            android:paddingStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ImageDislike"
            android:layout_below="@id/ImageLike"
            android:paddingStart="5dp"
            android:textSize="20dp"
            android:text="10"
            />
    </RelativeLayout>
</layout>